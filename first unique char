class Solution {
public:
    int firstUniqChar(string s) {
        #include<unordered_map>
        unordered_map<char,pair<int,int>>um;
        for(int i=0;i<s.size();i++){
            um[s[i]].first=i;
            um[s[i]].second+=1;
        }
        int mini=INT_MAX;
        for(auto x:um){
            if(x.second.second==1){
                if(x.second.first<mini){
                    mini=x.second.first;
                }
            }
        }
        if(mini==INT_MAX){
            return -1;
        }
        else{
            return mini;
        }
    }
};
